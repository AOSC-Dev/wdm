#blackboxcm#	    # startup blackbox
#blackboxcm#	    if [ -x #BLACKBOX_PATH# ] ; then
#blackboxcm#	        echo Starting BlackBox >$HOME/.xwm.msgs
#blackboxcm#		exec #BLACKBOX_PATH# >>$HOME/.xwm.msgs 2>&1
#blackboxcm#	    fi
#blackboxcm#	    ;;
#icewmcm#	icewm*|IceWm)
#icewmcm#	    # startup icewm
#icewmcm#	    if [ -x #ICEWM_PATH# ] ; then
#icewmcm#	        echo Starting icewm >$HOME/.xwm.msgs
#icewmcm#		exec #ICEWM_PATH# >>$HOME/.xwm.msgs 2>&1
